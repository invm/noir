{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Noir"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "open": true
      },
      "os": {
        "all": true
      },
      "process": {
        "relaunch": true
      },
      "dialog": {
        "all": false,
        "save": true
      },
      "clipboard": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "invm.noir",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://gist.github.com/invm/ac1f81e3842e13cc9b671c639f023d20/raw/"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE0RkMzMDkxRkU4MjA4QjgKUldTNENJTCtrVEQ4cEJIVjFwVW11cEd2S1VKa3NsUjByQ0VyM2dodktaVWZONkNKUW9qSkRUSmcK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Noir",
        "minHeight": 900,
        "minWidth": 1200,
        "width": 1200,
        "height": 900
      }
    ]
  }
}
